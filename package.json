{
  "name": "ecmascript-examples",
  "version": "1.4.0",
  "description": "EcmaScript 2015, 2016, 2017, 2018 & 2019 Demos",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rickbeerendonk/ECMAScript-2015-2018-Demos.git"
  },
  "author": "Rick Beerendonk",
  "license": "EUPL-1.2",
  "bugs": {
    "url": "https://github.com/rickbeerendonk/ECMAScript-2015-2018-Demos/issues"
  },
  "homepage": "https://github.com/rickbeerendonk/ECMAScript-2015-2018-Demos#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate",
      "pre-push": "npm run validate"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.3.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-optional-catch-binding": "^7.0.0-alpha.16",
    "eslint": "^5.12.1",
    "husky": "^1.3.1",
    "prettier": "^1.16.2",
    "rimraf": "^2.6.3"
  },
  "scripts": {
    "build": "npm run clean && babel src --out-dir lib",
    "build-watch": "npm run clean && babel src -w --out-dir lib",
    "clean": "rimraf lib",
    "eslint": "eslint . --ext .js --cache",
    "eslint-fix": "eslint . --ext .js --cache --fix",
    "prettier": "prettier --list-different '**/*.{json,js,html}'",
    "prettier-fix": "prettier --write '**/*.{json,js,html}'",
    "validate": "npm run eslint && npm run prettier"
  }
}
